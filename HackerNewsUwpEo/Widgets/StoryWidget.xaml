<UserControl
    x:Class="HackerNewsUwpEo.Widgets.StoryWidget"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HackerNewsUwpEo.Widgets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <RelativePanel HorizontalAlignment="Left" Height="100" VerticalAlignment="Top"  Loaded="Grid_Loaded">
        <TextBox HorizontalAlignment="Left" x:Name="TxtTitle" TextWrapping="Wrap" Text="[Title]" VerticalAlignment="Top" Margin="10,10,0,0" Width="258"/>
        <TextBox HorizontalAlignment="Left" x:Name="TxtAuthor" TextWrapping="NoWrap" Text="[Author]" VerticalAlignment="Bottom" Margin="10,0,0,0
" Width="74" FontSize="12" Height="29" MinHeight="20" RelativePanel.Below="TxtTitle"/>
    </RelativePanel>
</UserControl>
